<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/color_accent_dark</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:checkboxStyle">@style/checkboxStyle</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="bigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="checkboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="colorAccent">@color/button_background</item>
    </style>

    <style name="textWhiteTitle" parent="@android:style/TextAppearance" >
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textLabeledAbove" parent="@android:style/TextAppearance" >
        <item name="android:textColor">@color/neutral_gray_4</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="textLabeledMain" parent="@android:style/TextAppearance" >
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="textLink" parent="@android:style/TextAppearance" >
        <item name="android:textColor">@color/link_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="textGreen" parent="@android:style/TextAppearance" >
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="checkInLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="toolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/primary_blue</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="fragmentsCheckInBackground">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="editReservationInput" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorHint">@color/transparent_gray_3</item>
        <item name="android:padding">10dp</item>


    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="colorControlNormal">@color/transparent_gray_3</item>
        <item name="colorControlActivated">@color/transparent_gray_3</item>
    </style>

    <style name="TextLabelLogIn" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/neutral_white</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="colorControlNormal">@color/neutral_white</item>
        <item name="colorControlActivated">@color/neutral_white</item>
    </style>

</resources>
