<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@android:color/white</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
        <item name="android:checkboxStyle">@style/checkboxStyle</item>
    </style>

    <style name="bigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="checkboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="colorAccent">@color/button_background</item>
    </style>

</resources>
