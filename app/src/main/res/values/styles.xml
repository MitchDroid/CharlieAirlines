<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/color_accent_dark</item>

        <item name="colorAccent">@android:color/white</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
        <item name="android:checkboxStyle">@style/checkboxStyle</item>
    </style>

    <style name="bigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="editTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="checkboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="colorAccent">@color/button_background</item>
    </style>

    <style name="textWhiteTitle" parent="@android:style/TextAppearance" >
        <item name="android:textColor">@color/neutral_white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textLabeledAbove" parent="@android:style/TextAppearance" >
        <item name="android:textColor">@color/neutral_gray_4</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="textLabeledMain" parent="@android:style/TextAppearance" >
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="textLink" parent="@android:style/TextAppearance" >
        <item name="android:textColor">@color/link_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="textGreen" parent="@android:style/TextAppearance" >
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">bottom</item>
    </style>

</resources>
