<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
        >


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Luis Bejarano"
                android:textColor="@color/dark_blue"
                android:id="@+id/emergencyItemName"/>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="+1"
                        android:id="@+id/emergencyItemArea"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/emergencyItemName" />

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="3136064315"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/emergencyItemPhone"
                        android:layout_below="@+id/emergencyItemName"
                        android:layout_toRightOf="@+id/emergencyItemArea"
                        android:layout_toLeftOf="@+id/checkBox"
                        android:layout_toStartOf="@+id/checkBox"/>

                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkBox"
                        android:layout_alignRight="@+id/emergencyItemName"
                        android:layout_alignEnd="@+id/emergencyItemName"
                        android:layout_alignBottom="@+id/emergencyItemPhone" />


</RelativeLayout>