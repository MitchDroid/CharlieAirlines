<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_blue">

    <ScrollView
        android:id="@+id/confirmationScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/bodyWrapper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/success_wrapper"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_in_success"
                    style="@style/textWhite"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:layout_gravity="center"
                    android:id="@+id/textSuccess" />

            </LinearLayout>

            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/row1"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/check_in_flight"
                            android:layout_weight="1"
                            android:id="@+id/textView2" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/check_in_travel_time"
                            android:layout_weight="1"
                            android:id="@+id/textView3" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/check_in_gate"
                            android:layout_weight="1"
                            android:id="@+id/textView4" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textBlue"
                            android:text="@string/dummy_flight"
                            android:layout_weight="1"
                            android:id="@+id/textView5" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textBlue"
                            android:text="@string/dummy_travel_time"
                            android:layout_weight="1"
                            android:id="@+id/textView6" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textBlue"
                            android:text="@string/dummy_gate"
                            android:layout_weight="1"
                            android:id="@+id/textView7" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row3"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/check_in_passenger"
                            android:layout_weight="1"
                            android:id="@+id/textView8" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/check_in_confirmation"
                            android:layout_weight="1"
                            android:id="@+id/textView9" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row4"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textBlue"
                            android:text="@string/dummy_passenger"
                            android:layout_weight="1"
                            android:id="@+id/textView10" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textBlue"
                            android:text="@string/dummy_confirmation"
                            android:layout_weight="1"
                            android:id="@+id/textView11" />


                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/check_in_button"
                        android:id="@+id/button" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
